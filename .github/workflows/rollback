name: Rollback Latest Backup

on:
  workflow_dispatch:

jobs:
  rollback:
    runs-on: ubuntu-latest

    steps:
    - name: Rollback via SSH
      uses: appleboy/ssh-action@v1.0.3
      with:
        host: ${{ secrets.SERVER_IP }}
        username: ${{ secrets.SSH_USERNAME }}
        key: ${{ secrets.SSH_PRIVATE_KEY }}
        passphrase: ${{ secrets.SSH_PASSPHRASE }}
        port: ${{ secrets.SSH_PORT }}
        script: |
          cd /nex-koala/backup

          latest_zip=$(ls -t api_backup_*.zip 2>/dev/null | head -n 1)

          if [ -z "$latest_zip" ]; then
            echo "❌ No backup zip file found. Cannot rollback."
            exit 1
          fi

          echo "🔄 Rolling back using $latest_zip"

          # Clear current deployment
          rm -rf /nex-koala/api/*

          # Restore from latest backup
          unzip -o "/nex-koala/backup/$latest_zip" -d /nex-koala/api

          # Restart service
          systemctl restart invoice-api.service

          echo "✅ Rollback complete."
